@using AssessmentEF.MVC.Models;
@model List<Personnel>

@{
    ViewData["Title"] = "Index";
}

<h1>Personel Listesi</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Adı
            </th>
            <th>
                Soyadı
            </th>
            <th>
                Doğum Tarihi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                    @item.BirthDate.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", "Personnel", new {  id=item.ID },new { @class= "btn btn-info"})
                
            </td>
        </tr>
}
    </tbody>
</table>
