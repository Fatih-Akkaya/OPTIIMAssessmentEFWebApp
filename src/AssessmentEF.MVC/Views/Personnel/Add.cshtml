@model AssessmentEF.MVC.Models.Personnel

@{
    ViewData["Title"] = "Add";
}

<h1>Personel Ekle</h1>

<hr />
<div class="row">
    <div class="">
        <form asp-action="Add">
            <div class="form-row d-flex">
                <div class="form-group px-5 col-md-6">
                    <label asp-for="Name" class="sr-only"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group px-5 col-md-6">
                    <label asp-for="Surname" class="sr-only"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row d-flex">
                <div class="form-group px-5 col-md-6">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input asp-for="BirthDate" class="form-control" type="date" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group px-5 col-md-6">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<Gender>()" class="form-control">
                        <option selected="selected" value="">Seçiminiz</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row d-flex">
                <div class="form-group px-5 col-md-6">
                    <label asp-for="Salary.Department" class="control-label"></label>
                    <select asp-for="Salary.Department" asp-items="@Html.GetEnumSelectList<Department>()" class="form-control">
                        <option selected="selected" value="">Seçiminiz</option>
                    </select>
                </div>
                <div class="form-group px-5 col-md-6">
                    <label asp-for="Salary.PersonnelSalary" class="control-label"></label>
                    <input asp-for="Salary.PersonnelSalary" class="form-control" type="number" />
                </div>
            </div>
            <div class="form-group p-3 px-5 col-md-6">
                <input type="submit" value="   Ekle   " class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
